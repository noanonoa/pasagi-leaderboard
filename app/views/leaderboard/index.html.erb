<div>
  <h1 class="font-bold text-4xl">Pasagi Leaderboard</h1>
</div>

<div>
  <%= link_to "Create New Player", new_player_path %>
</div>

<% @players.each do |player| %>
  <div class="flex justify-center align-center">
    <p>
      <%= player.name %>
    </p>
    <p>
      <%= player.win_count %>
    </p>
  </div>
<% end %>
